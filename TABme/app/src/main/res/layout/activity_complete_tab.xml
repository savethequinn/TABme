<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jdo589gv4353.tabme.CompleteTab"
    android:background="#FCFFFD">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notify Members"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:background="@color/colorAccent3"
            android:textAlignment="center"
            android:padding="10dp"
            android:ellipsize="none"
            android:phoneNumber="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter the phone numbers associated with the users in the tab. We will send them a text reminding them how much they owe!"
            android:id="@+id/textView8"
            android:textAlignment="center"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textIsSelectable="true"
            android:textSize="17dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:background="@drawable/roundedbutton"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:id="@+id/AddUserBtn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/scrollView4"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserListView"
        android:layout_weight="1.37"
        android:layout_above="@+id/TabOutButton"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/linearLayout"
        android:padding="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tab Out!"
        android:id="@+id/TabOutButton"
        android:background="@drawable/roundedbutton"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp" />

</RelativeLayout>
