<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="finalproject.gv4353jdo589.stepmonster.Login"
    android:background="#66d1c8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:text="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username"
            android:id="@+id/UNtextView"
            android:layout_above="@+id/UNeditText"
            android:layout_alignStart="@+id/textView5"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/UNeditText"
            android:layout_above="@+id/PWtextView"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/PWtextView"
            android:layout_above="@+id/LoginButton"
            android:layout_alignStart="@+id/UNtextView"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PWeditText"
            android:layout_alignTop="@+id/PWtextView"
            android:layout_alignStart="@+id/UNeditText"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/LoginButton"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/PWeditText"
            android:background="@drawable/roundedbutton"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_margin="15dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/RegisterButton"
            android:layout_alignTop="@+id/LoginButton"
            android:layout_alignEnd="@+id/PWeditText"
            android:background="@drawable/roundedbutton"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" />

    </LinearLayout>

</RelativeLayout>
